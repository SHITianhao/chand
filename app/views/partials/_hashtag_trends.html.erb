<!-- Here is hashtag html erb -->
<div class="card">
    <h4>Trends</h4>
    <div class="row">
        <div class="col-lg-12">
            <% @trends.each do |trend| %>
                <a href="/hashtags/<%=trend.hashtag_text%>?id=<%=trend.id%>" >
                    <span class="hashtag_trends_link">#<%= trend.hashtag_text %></span>
                    <div class="hashtag_trends_number"><%= trend.total_number %> tweets</div>
                </a>
            <% end %>
        </div>
    </div>
</div>